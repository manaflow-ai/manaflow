#!/usr/bin/env node
/**
 * cloudrouter-zzz CLI wrapper - delegates to the native cmux binary.
 *
 * This is a test package alias for cmux. The postinstall script copies
 * the platform-specific native binary here. If postinstall hasn't run
 * yet, this wrapper finds and executes the binary from lib/ or the
 * platform package.
 */

const { execFileSync } = require("child_process");
const path = require("path");
const fs = require("fs");

const binName = process.platform === "win32" ? "cmux.exe" : "cmux";

// Look for the native binary in these locations (in order)
const candidates = [
  // lib/cmux - copied by postinstall or build process
  path.join(__dirname, "..", "lib", binName),
  // Platform package in node_modules (hoisted)
  ...getPlatformPaths(),
];

function getPlatformPaths() {
  const platform = process.platform;
  const arch = process.arch;
  const pkgName = `cloudrouter-zzz-${platform}-${arch}`;
  return [
    path.join(__dirname, "..", "..", pkgName, "bin", binName),
    path.join(__dirname, "..", "node_modules", pkgName, "bin", binName),
  ];
}

let binaryPath;
for (const candidate of candidates) {
  if (fs.existsSync(candidate)) {
    binaryPath = candidate;
    break;
  }
}

if (!binaryPath) {
  console.error("cloudrouter-zzz: Could not find native binary. Try reinstalling.");
  process.exit(1);
}

try {
  execFileSync(binaryPath, process.argv.slice(2), {
    stdio: "inherit",
    env: process.env,
  });
} catch (err) {
  if (err.status !== null) {
    process.exit(err.status);
  }
  throw err;
}
